{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["--debug-brk=5858", "--no-timeouts", "--colors", "spec/**/*spec.ts"],
            "address": "localhost",
            "port": 5858
        }
    ]
}