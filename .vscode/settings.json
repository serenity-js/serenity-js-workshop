{
  "code-runner.enableAppInsights": false,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "node --require=\"ts-node/register\""
  },
  "mochaExplorer.files": "exercises/*/spec/**/*.spec.ts",
  "mochaExplorer.logpanel": true,
  "mochaExplorer.pruneFiles": true,

  "run-protractor.protractorConfiguration": "exercises/07-ui/protractor.conf.js",

  "terminal.integrated.env.osx": {
		"PATH": "node_modules/.bin:${env:PATH}"
  },
  "terminal.integrated.env.linux": {
		"PATH": "node_modules/.bin:${env:PATH}"
  },
  "terminal.integrated.env.windows": {
		"PATH": "node_modules\\.bin;${env:PATH}"
  },
  
  "typescript.preferences.quoteStyle": "single",
  "files.autoSave": "afterDelay",

  "debug.inlineValues": true,
  "cSpell.words": [
    "Todos",
    "Molak"
  ]
}

